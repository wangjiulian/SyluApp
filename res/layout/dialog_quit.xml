<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quit_dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ac000000"
    android:gravity="center" >
   <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical"
    android:background="@color/white" >
            <RelativeLayout
                android:id="@+id/choice_one_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:padding="20dip"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/left1" 
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/app_panel_friendcard_icon"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/left1"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:text="退出当前账号"
                    android:textSize="16.0dip" />
            </RelativeLayout>

            <TextView 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_title"/>
            <RelativeLayout
                android:id="@+id/choice_two_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:padding="20dip"
                android:orientation="horizontal" >

                 <ImageView
                    android:id="@+id/left2" 
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/logout_icon"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true"
                    android:layout_toRightOf="@id/left2"
                    android:layout_marginLeft="15dp"
                    android:text="关闭校园通"
                    android:textSize="16.0dip" />
            </RelativeLayout>
</LinearLayout>
</LinearLayout>