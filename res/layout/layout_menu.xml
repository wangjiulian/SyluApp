<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000" >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.dpl.syluapp.utils.CircleImageView
            android:id="@+id/lv_menu_tou"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/touxiang"
            app:border_color="#FFFFFF"
            app:border_width="2dp" >
        </com.dpl.syluapp.utils.CircleImageView>

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lv_menu_tou"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/lv_menu_tou"
            android:text="黄荣泽明"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/tv_menu_jie"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/lv_menu_tou"
            android:layout_alignLeft="@+id/tv_menu_name"
            android:layout_marginBottom="8dp"
            android:background="#33B5E5"
            android:gravity="center"
            android:text="11屆"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <View
            android:layout_width="230dp"
            android:layout_height="0.1dip"
            android:layout_alignLeft="@+id/lv_menu_tou"
            android:layout_below="@id/tv_menu_jie"
            android:layout_marginTop="15dp"
            android:background="#a0FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_menu_note"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/head"
        android:layout_marginTop="10dp"
        android:background="@drawable/menu_background_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_menu_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:focusable="false"
            android:text="我的通知"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu_bbs"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_menu_note"
        android:background="@drawable/menu_background_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_menu_bbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:focusable="false"
            android:text="理工树洞"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu_exercise"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_menu_bbs"
        android:background="@drawable/menu_background_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_menu_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:focusable="false"
            android:text="积分活动"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_menu_feedback"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ll_menu_exercise"
        android:background="@drawable/menu_background_selector"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_menu_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:focusable="false"
            android:text="意见反馈"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_menu_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:text="设置"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <View
        android:id="@+id/line"
        android:layout_width="0.1dip"
        android:layout_height="18dp"
        android:layout_alignBottom="@id/tv_menu_setting"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_menu_setting"
        android:background="#a0FFFFFF" />

    <TextView
        android:id="@+id/tv_menu_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_menu_setting"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/line"
        android:text="退出"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>