<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_librarylogin_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_below="@id/lyvt_librarylogin_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon_booksearch" />

    <EditText
        android:id="@+id/et_librarylogin_name"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_librarylogin_pswd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:textSize="15sp"
        android:hint="输入您的图书馆账号" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_librarylogin_pswd"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_librarylogin_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="输入您的图书馆密码"
        android:textSize="15sp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_librarylogin_login"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</RelativeLayout>