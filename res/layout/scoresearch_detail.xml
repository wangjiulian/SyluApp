<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_scoredetail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="计算机网路"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_scoredetail_natute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_scoredetail_title"
        android:text="专业基础课"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/llyt_scoredetail_ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_scoredetail_natute"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_scoredetail_credit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="学分:5.0" />

        <TextView
              android:id="@+id/tv_scoredetail_GPA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="绩点:5.0" />

        <TextView
              android:id="@+id/tv_scoredetail_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成绩:88" />
    </LinearLayout>
     <LinearLayout
            android:id="@+id/llyt_scoredetail_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llyt_scoredetail_ly1"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                  android:id="@+id/tv_scoredetail_ususal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="平时成绩:99" />

            <TextView
                  android:id="@+id/tv_scoredetail_midterm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="期中成绩:88" />

        </LinearLayout>
          <LinearLayout
            android:id="@+id/llyt_scoredetail_ly3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llyt_scoredetail_ly2"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                
                  android:id="@+id/tv_scoredetail_terminal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="期末成绩:99" />

            <TextView
                  android:id="@+id/tv_scoredetail_experiment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="实验成绩:88" />
            

        </LinearLayout>
 <LinearLayout
            android:id="@+id/llyt_scoredetail_ly4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llyt_scoredetail_ly3"
            android:layout_marginTop="30dp"
            android:orientation="horizontal" >

            <TextView
                  android:id="@+id/tv_scoredetail_makeupinfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="补考成绩:99" />

            <TextView
                  android:id="@+id/tv_scoredetail_papermakeupinfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="卷面补考成绩:88" />
             <TextView
                   android:id="@+id/tv_scoredetail_rebuildsocre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重修成绩:88" />
            </LinearLayout>
</RelativeLayout>