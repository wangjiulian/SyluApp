<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/connnerleftupshallowgreen"
        android:layout_marginLeft="5dp"
         android:layout_marginTop="5dp"
          android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.2" >

            <RelativeLayout
                android:id="@+id/libraryitem_leftup"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:background="@drawable/connnerleftupshallowgreen"
                 >

                <RelativeLayout
                    android:id="@+id/libraryitem_leftup_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_libraryitem_exceed"
                    android:layout_centerHorizontal="true" >

                    <TextView
                        android:id="@+id/tv_libraryitem_dayleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="25"
                        android:textColor="#FFFFFF"
                        android:textSize="45sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/btn_libraryitem_exceed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="剩余天数"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_libraryitem_renew"
                    android:layout_width="50dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/libraryitem_leftup_days"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_common_bg"
                    android:text="续借"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/btn_libraryitem_renew"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/connnerleftdowndeepgreen" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" >

            <RelativeLayout
                android:id="@+id/libraryitem_rightup"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                 android:background="@drawable/connerrightup"
                 >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:id="@+id/tv_libraryitem_bName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:text="中国古代文学名著"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_libraryitem_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_libraryitem_bName"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="王五编著"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                   
                </RelativeLayout>
                 <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/connerrightdown" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>